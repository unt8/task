<a href="https://github.com/login/oauth/authorize?scope=user%20public_repo&client_id=<%= @client_id %>">Login with Github</a>



<h3>Users</h3>
<table class="table table-bordered table-condensed">
  <thead>
  <th>#</th>
  <th>github_id</th>
  <th>login</th>
  <th>avatar</th>
  </thead>
  <tbody>
  <% @users.each_with_index do |user, index| %>
    <tr>
      <td>
        <%= index + 1 %>
      </td>
      <td>
        <%= user.github_id %>
      </td>
      <td>
        <%= user.login %>
      </td>
      <td>
        <img src="<%= user.avatar_url %>" width="30" height="30" alt="">
      </td>
    </tr>
  <% end %>
  </tbody>
</table>